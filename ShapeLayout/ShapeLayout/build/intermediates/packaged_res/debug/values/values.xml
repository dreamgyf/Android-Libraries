<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ShapeLayout">
        <attr format="dimension" name="cornerRadius"/>
        <attr format="dimension" name="cornerTopLeftRadius"/>
        <attr format="dimension" name="cornerTopRightRadius"/>
        <attr format="dimension" name="cornerBottomRightRadius"/>
        <attr format="dimension" name="cornerBottomLeftRadius"/>

        <attr format="color" name="gradientStartColor"/>
        <attr format="color" name="gradientCenterColor"/>
        <attr format="color" name="gradientEndColor"/>
        <attr format="integer" name="gradientAngle"/>
        <attr format="enum" name="gradientType">
            <enum name="linear" value="0"/>
            <enum name="radial" value="1"/>
            <enum name="sweep" value="2"/>
        </attr>
        <attr format="float|fraction" name="gradientCenterX"/>
        <attr format="float|fraction" name="gradientCenterY"/>
        <attr format="dimension" name="gradientRadius"/>

        <attr format="color" name="solid"/>

        <attr format="dimension" name="strokeWidth"/>
        <attr format="color" name="strokeColor"/>
        <attr format="dimension" name="strokeDashWidth"/>
        <attr format="dimension" name="strokeDashGap"/>
    </declare-styleable>
</resources>